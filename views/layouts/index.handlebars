<div class="container">

<div class="jumbotron">
    <h1> Please choose your abundant Burger</h1>
    <p> Burger Pick Up Orders!</p>
    <br>
    <h2> Here are our available choices!</h2>
    <panel>
        <form class="create-form">
            <div class="form-group">
                <label for="newbuger"> Order Your Burger</label>
                <select data-placeholder="" id="newburger" name="burger">
                    <option value="Nothing Selected" selected> Choose Now</option>
                    <option value="hamburger"> Hamburger</option>
                    <option value="cheeseBurger">CheeseBurger</option>
                    <option value="DoubleBfChz"> Double Burger With Cheese</option>
                    <option value="VeggieBurger"> Veggie Burger</option>
                    <option value="PulledPork">Pulled Pork Sandwich</option>
                    <option value="ChickenClub">Chicken Club</option>
                    <option value="SteaknChz">Steak And Cheese</option>    
                </select>
<button type="submit" class="btn btn-success" id="addburger">
    <span class="fa fa-thumbs-up"></span>
    </button>
            </div>
        </form>
    </panel>
</div>
<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading" id="leftside"><strong> Choose Your Burger</strong>
        <p>Send Order To Your Cashier When You Are Ready</p>
        </div>
        <div class="panel-body">

            <ul>
                {{#each burger}}
                {{#unless devoured}}

                <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                    data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                    <hr>
                    {{/unless}}
                    {{/each}}
            </ul>
        </div>
    </div>
</div>
<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading" id="rightside"><strong>Your Food Is Ready!</strong>
        <p>Remover Your Order When It Is Delivered</p>
        </div>
        <div class="panel-body">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                data-newDevoured="{{devoured}}"><span class="fa fa-trash"<></span></button>
                <hr>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

</div>
</div>